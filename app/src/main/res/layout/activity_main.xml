<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Text_result"
        android:layout_width="255dp"
        android:layout_height="80dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="200dp"
        android:autoSizeMaxTextSize="36dp"
        android:autoSizeMinTextSize="12dp"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/Button_calculate"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="115dp"
        android:text="@string/calculateButtonText"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Text_result" />

    <EditText
        android:id="@+id/EditText_value"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="78dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="68dp"
        android:ems="10"
        android:text="0"
        android:textAlignment="center"
        android:textSize="24sp"
        android:tooltipText="@string/enterValueSampleText"
        app:layout_constraintBottom_toTopOf="@+id/Text_result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/Spinner_inputUnit"
        android:layout_width="353dp"
        android:layout_height="62dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="120dp"
        android:contentDescription="@string/enterInputUnit"
        android:entries="@array/lengthUnits"
        android:textAlignment="center"
        android:tooltipText="@string/enterInputUnit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/Spinner_outputUnit"
        android:layout_width="353dp"
        android:layout_height="62dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="228dp"
        android:contentDescription="@string/enterOutputUnit"
        android:entries="@array/lengthUnits"
        android:textAlignment="center"
        android:tooltipText="@string/enterInputUnit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>